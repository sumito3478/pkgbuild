# Maintainer: sumito3478 <sumito3478@gmail.com>

pkgname=python-tinkerer
pkgver=1.3.0
pkgrel=1
pkgdesc="Sphinx-based blogging engine"
url="http://tinkerer.me/"
depends=('python' 'python-babel' 'python-sphinx' 'python-jinja')
makedepends=('python-setuptools')
license=('BSD')
arch=('any')
source=('https://pypi.python.org/packages/source/T/Tinkerer/Tinkerer-1.3.0.zip')
md5sums=('4397de973e753ebf747d010ddac366c8')

build() {
    cd $srcdir/Tinkerer-1.3.0
    python setup.py build
}

package() {
    cd $srcdir/Tinkerer-1.3.0
    python setup.py install --root="$pkgdir" --optimize=1
}
